# Depends on: extra-cmake-modules boost kdoctools kdelibs4support kparts xorg-libx11

description="Provides the glue necessary for application parts to be embedded as a Kontact component"
url="https://projects.kde.org/kontactinterface"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=kontactinterface
version=18.12.3

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
