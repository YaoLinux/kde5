makedepends=(frei0r-plugins shared-mime-info qtquickcontrols qtmultimedia frei0r-plugins knewstuff kplotting knotifyconfig kdeclarative kded kfilemetadata mlt xorg-glu sdl-image hicolor-icon-theme qtbase extra-cmake-modules kdoctools v4l-utils ffmpeg cdrtools libdv)

description="A non-linear video editor for Linux using the MLT video framework"
url="http://www.kdenlive.org/"
packager="Yaolinux Team"
maintainer="rems"

run=(shared-mime-info frei0r-plugins)

name=kdenlive
version=20.08.1

source=(https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom # ATTENTION, ce feed n'est pas Ã  jour.
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | sed "s@ @@g" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
