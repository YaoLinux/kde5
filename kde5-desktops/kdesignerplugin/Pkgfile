makedepends=(kcompletion kconfigwidgets kiconthemes kio kitemviews kplotting ktextwidgets kxmlgui sonnet kdoctools)

description="Integration of Frameworks widgets in Qt Designer/Creator "
url="https://www.kde.org/"
packager="Yaolinux Team"
maintainer="rems"

name=kdesignerplugin
version=5.76.0

source=(https://download.kde.org/stable/frameworks/${version%.*}/portingAids/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
