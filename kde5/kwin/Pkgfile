makedepends=(libinput qtsensors qtmultimedia qtquickcontrols qtvirtualkeyboard kscreenlocker plasma-framework kcmutils breeze kinit xcb-util-cursor knewstuff)

description="KDE Window manager "
url="https://www.kde.org/"
packager="Yaolinux Team"
maintainer="rems"

run=(libepoxy libxcb xcb-util-cursor xcb-util-image xcb-util-keysyms xdg-utils qtsensors qtmultimedia qtquickcontrols qtvirtualkeyboard) 

name=kwin
version=5.18.0
release=3

source=(https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}

