# Depends on: karchive kcodecs kcompletion kconfig kconfigwidgets kcoreaddons kglobalaccel ki18n kiconthemes kio kjobwidgets kjs knotifications kparts kservice ktextwidgets kwallet kwidgetsaddons kwindowsystem kxmlgui sonnet giflib libjpeg-turbo libpng phonon-qt giflib openssl

description="KHTML APIs "
url="https://www.kde.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=khtml
version=5.56.0

source=(http://download.kde.org/stable/frameworks/${version%.*}/portingAids/$name-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
