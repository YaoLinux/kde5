makedepends=(qtbase karchive kbookmarks kcodecs kconfig kconfigwidgets kcoreaddons kdbusaddons kdelibs4support kdnssd kguiaddons khtml ki18n kiconthemes kimageformats kio kparts kpty kservice kxmlgui solid libjpeg-turbo exiv2 libmtp phonon-qt samba shared-mime-info kactivities openexr openssh)

description="Additional components to increase the functionality of KIO "
url="https://www.kde.org/"
packager="Yaolinux Team"
maintainer="rems"

run=(shared-mime-info)

name=kio-extras
version=19.08.2

source=(http://download.kde.org/stable/applications/$version/src/kio-extras-$version.tar.xz)

build=kde5

uptodate() {
feed=https://github.com/KDE/$name/releases.atom 
exec="lynx -read_timeout=20 -dump -listonly -nonumbers $feed"
ligne=1 # nombre de notification ? afficher
$exec $feed | grep title | \
sed "s@<title>@@" | \
sed "s@</title>@@" | \
sed "s@v@@" | \
head -n $(($ligne+1 )) | \
tail -n $(($ligne))
}
